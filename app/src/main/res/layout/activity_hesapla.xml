<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/anatema"
    tools:context=".YeniKayit">
    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="?attr/anatema">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/close"
            android:src="@drawable/close"
            app:tint="?attr/textrengi"
            android:background="?attr/anatema"
            android:contentDescription="Çık"
            />

        <TextView
            android:id="@+id/txtkayit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:fontFamily="@font/montserratextrabold"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/durum"
        android:layout_below="@id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:background="?attr/turuncumavi3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ÖĞÜNÜM"
            android:fontFamily="@font/montserratsemibold"
            android:textColor="?attr/turuncumavi3"
            android:textSize="17sp"
            />
        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:background="?attr/turuncumavi3" />

    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/durum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/degergir"
        android:gravity="center">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />
        <TextView
            android:id="@+id/txt_temizle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:fontFamily="@font/montserratmedium"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:text="Öğünümü Temizle"
            android:textColor="?attr/textrengi"
            android:textSize="15sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/degergir"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/siyah2siyah"
                android:text="Toplam Karbonhidrat:"
                android:textSize="20sp"
                android:fontFamily="@font/montserratextrabold"
                android:paddingLeft="25dp"
                android:paddingTop="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sonuc"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="?attr/turuncumavi3"
                android:fontFamily="@font/montserratbold"
                android:paddingLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="?attr/turuncumavi3"
                android:fontFamily="@font/montserratbold"
                android:text=" gr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:textColor="?attr/siyah2siyah"
            android:fontFamily="@font/montserratextrabold"
            android:text="K:D oranına göre alınması gereken doz:"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:textSize="15sp"
            android:textColor="@color/black2"
            android:fontFamily="@font/montserratsemibold"
            android:text="(Bu oran ayarlardan değiştirilebilir.)"
            />

        <TextView
            android:id="@+id/doz"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="?attr/turuncumavi3"
            android:fontFamily="@font/montserratbold"
            android:paddingLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>








    </LinearLayout>



</RelativeLayout>